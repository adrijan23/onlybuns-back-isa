<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core.xsd">
    <cache alias="rateLimiterCache">
        <expiry>
            <ttl unit="seconds">60</ttl>
        </expiry>
        <resources>
            <heap unit="entries">100</heap>
        </resources>
    </cache>

    <!-- Cache for weekly top posts -->
    <cache alias="topPostsWeekly">
        <expiry>
            <ttl unit="minutes">30</ttl> <!-- Cache expires in 30 minutes -->
        </expiry>
        <resources>
            <heap unit="entries">10</heap>
        </resources>
    </cache>

    <!-- Cache for all-time top posts -->
    <cache alias="topPostsAllTime">
        <expiry>
            <ttl unit="hours">1</ttl> <!-- Cache expires in 1 hour -->
        </expiry>
        <resources>
            <heap unit="entries">10</heap>
        </resources>
    </cache>

    <cache alias="followLimitCache">
        <expiry>
            <ttl unit="seconds">60</ttl>
        </expiry>
        <heap unit="entries">1000</heap> <!-- Max 1000 users tracked simultaneously -->
    </cache>

    <cache alias="imageCache">
        <expiry>
            <ttl unit="hours">24</ttl> <!-- Cache images for 24 hours -->
        </expiry>
            <resources>
        <heap unit="entries">500</heap> <!-- 100MB allocated for image caching -->
    </resources>
    </cache>

</config>